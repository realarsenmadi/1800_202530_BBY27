rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 1. REPORTS COLLECTION: Allow only authenticated users to create reports.
    // Anyone can read the reports to show parking status updates.
    match /reports/{reportId} {
      allow create: if request.auth != null;
      allow read: if true; 
    }
    
    // 2. META COLLECTION: Allow authenticated users to update lastUpdated timestamp
    // Anyone can read the meta document
    match /meta/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 3. USERS COLLECTION (e.g., for Favourites): 
    // Allow users to read and write ONLY documents under their own userId path.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}